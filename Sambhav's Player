<body>
  <h1>üé¨ Sambhav‚Äôs Player</h1>

  <div id="videoList">
    <button onclick="loadFixedVideo('https://youtu.be/dQw4w9WgXcQ')">üé¨ YouTube Demo</button>
    <button onclick="loadFixedVideo('https://mdiskplay.com/s/abc123')">üé¨ Mdisk Movie</button>
    <button onclick="loadFixedVideo('https://www.dailymotion.com/video/x7z2z6j')">üé¨ Dailymotion Clip</button>
  </div>

  <input type="text" id="videoLink" placeholder="Paste YouTube, Shorts, Insta Reel, Dailymotion, TeraBox/mdisk link">
  <button onclick="loadVideo()">Play Video</button>
  <div id="player"></div>

  <script>
    function loadFixedVideo(link) {
      document.getElementById("videoLink").value = link;
      loadVideo();
    }

    function loadVideo() {
      const url = document.getElementById("videoLink").value.trim();
      let embedCode = "";

      if (url.includes("youtube.com") || url.includes("youtu.be")) {
        let videoId = "";
        if (url.includes("watch?v=")) {
          videoId = url.split("v=")[1].split("&")[0];
        } else if (url.includes("youtu.be/")) {
          videoId = url.split("youtu.be/")[1].split("?")[0];
        } else if (url.includes("shorts/")) {
          videoId = url.split("shorts/")[1].split("?")[0];
        }
        embedCode = `<iframe src="https://www.youtube.com/embed/${videoId}" allowfullscreen></iframe>`;
      } else if (url.includes("dailymotion.com") || url.includes("dai.ly")) {
        let videoId = "";
        if (url.includes("dailymotion.com/video/")) {
          videoId = url.split("/video/")[1]?.split("_")[0];
        } else if (url.includes("dai.ly/")) {
          videoId = url.split("dai.ly/")[1]?.split("?")[0];
        }
        embedCode = `<iframe src="https://www.dailymotion.com/embed/video/${videoId}" allowfullscreen></iframe>`;
      } else if (url.includes("mdiskplay.com") || url.includes("mdisk.me")) {
        embedCode = `<iframe src="${url}" allowfullscreen></iframe>`;
      } else if (url.includes("terabox.com") || url.includes("1024terabox.com")) {
        const fileId = url.split("/s/")[1]?.split("?")[0];
        const cleanId = fileId?.substring(1);
        if (cleanId) {
          const mdiskUrl = `https://mdiskplay.com/terabox/${cleanId}`;
          embedCode = `<iframe src="${mdiskUrl}" allowfullscreen></iframe>`;
        } else {
          embedCode = "<p style='color:red;'>‚ùå Invalid TeraBox link format.</p>";
        }
      } else if (url.includes("instagram.com/reel/")) {
        embedCode = `<iframe src="https://www.instagram.com/reel/${url.split("/reel/")[1].split("/")[0]}/embed" allowfullscreen></iframe>`;
      } else {
        embedCode = "<p style='color:red;'>‚ùå Unsupported link format.</p>";
      }

      document.getElementById("player").innerHTML = embedCode;
    }
  </script>
